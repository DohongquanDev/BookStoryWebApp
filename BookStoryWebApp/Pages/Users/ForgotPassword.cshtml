@page
@model BookStoryWebApp.Pages.Users.ForgotPasswordModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "_UserLayoutV2";
}

<div class="login-box">
     <div class="login-logo">
        <a href="/Index/"><b>Book</b>Story</a>
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Nhập email hệ thống sẽ gửi mật khẩu mới về mail của bạn</p>
            </div>
            <form  method="post">
            <div class="input-group mb-3">
                <input type="email" name="email" class="form-control" placehoder ="Email"/>
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Yêu cầu khôi phục mật khẩu</button>
                </div>
            </div>

            </form>
        <div class="social-auth-links text-center mb-3">
            <p></p>
        </div>
        <p class="mt-3 mb-1">
            <a href="/Users/Login/">Đăng nhập</a>
        </p>
        <p class="mb-0">
            <a href="/Users/Register/" class="text-center">Đăng ký tài khoản mới</a>
        </p>
    </div>
    </div>